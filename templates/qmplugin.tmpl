%TMPL:DEF{"qm::state::table"}%<div class='foswikiFormSteps foswikiHideOnPrint $class %IF{"istopic '%WEB%.%TOPIC%Copy'" then="foswikiHidden"}%'>%IF{"$'URLPARAM{rev}'=''"
  then="$percntTMPL:P{\"qm::state::button\" 
          workflow=\"$workflow\"
	}$percnt"
}%
<table class='foswikiLayoutTable qmStatusTable'>
  <tr class='qmStatusContainer $state'>
