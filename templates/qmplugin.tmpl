%TMPL:DEF{"qm::dialog::changestate::single"}%<div id="qmChangeStateDialog" title="%QMNET{type="edges" topic="%WEB%.%TOPIC%" workflow="%URLPARAM{"workflow"}%" from="current" format="$title"}%" class="jqUIDialog" style="display:none" data-modal="true" data-width="540" data-close-on-escape='true' data-draggable='true'>
%TMPL:P{"qm::dialog::changestate::start"}%
%FORMATLIST{
  "%edges%"
  pattern="^(.*)/(.*)/(.*)$"
  format="<input type='hidden' name='action' value='$2' /><input type='hidden' name='to' value='$3' />"
}%
%TMPL:P{"qm::dialog::changestate::end"}%%TMPL:END%

%TMPL:DEF{"qm::dialog::changestate::multi"}%<div id="qmChangeStateDialog" title="%TRANSLATE{"Change State"}%" class="jqUIDialog" style="display:none" data-modal="true" data-width="540" data-close-on-escape='true' data-draggable='true'>
%TMPL:P{"qm::dialog::changestate::start"}%
<div class="foswikiFormStep">
  <input type="hidden" name="to">
%FORMATLIST{
  "%edges%"
  pattern="^(.*)/(.*)/(.*)$"
  format="$percntQMEDGE{
            from=\"$1\"
            action=\"$2\"
            to=\"$3\"
            icon=\"fa-circle-o\"
            format=\"<label class='qmAction'>
                      <input type='radio' name='action' $percntIF{\"$index=1\" then=\"checked\"}$percnt value='$2' data-to='$3'>
                      $dollarpercntJQICON{\\"$dollaricon\\"}$dollarpercnt 
                      $percntIF{
                        \"%numActions%=%numEdges%\" 
                        then=\"$dollartitle\"
                      }$percnt$percntIF{
                        \"%numActions%=1\" 
                        then=\"$dollarnodeTitle($to)\"
                      }$percnt$percntIF{
                        \"%numActions%!=%numEdges% and %numActions%>1\" 
                        then=\"$dollartitle &#8594; $dollarnodeTitle($to)\"
                      }$percnt
                    </label>\"
          }$percnt"
  separator="$n"
}%
</div>
%TMPL:P{"qm::dialog::changestate::end"}%%TMPL:END%

