%TMPL:DEF{"qm::dialog::changestate"}%%QMSTATE{
  topic="%WEB%.%TOPIC%"
  workflow="%URLPARAM{"workflow"}%" 
  format="$percntSET{\"edges\" value=\"$edges\"}$percnt<!-- -->
          $percntSET{\"numActions\" value=\"$numActions\"}$percnt<!-- -->
